<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/main_grid"
        android:visibility="invisible">

    <Button
            android:id="@+id/register_scan_btn"
            android:text="@string/check_in_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/register_btn"
            app:layout_constraintBottom_toTopOf="@+id/presence_btn"
            app:cornerRadius="0dp" android:insetBottom="0dp" android:insetTop="0dp"/>
    <Button
            android:id="@+id/register_btn"
            android:text="@string/register_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/register_scan_btn"
            app:layout_constraintBottom_toTopOf="@+id/button4"
            app:cornerRadius="0dp" android:insetBottom="0dp" android:insetTop="0dp"/>

    <Button
            android:id="@+id/presence_btn"
            android:text="@string/presence_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/register_scan_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cornerRadius="0dp" android:insetBottom="0dp" android:insetTop="0dp"/>

    <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/register_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/presence_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cornerRadius="0dp" android:insetTop="0dp" android:insetBottom="0dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="0dp"
            android:orientation="horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
